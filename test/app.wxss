/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding:0;
  box-sizing: border-box;
  background: #f2f2f2;
  padding-bottom: 1.4rem;
  color: #494949;
}
.container_body{
  width: 100%;
  height: 100%;
  position: absolute;
  background: #f2f2f2;
  color: #494949;
}
.group_list{
  height: 2.6rem;
  line-height: 2.6rem;
  padding-left: .8rem;
  background: #FFF;
  margin-bottom: .8rem;
  border-top: 1px solid #EFEFEF;
  border-bottom: 1px solid #EFEFEF;
  position: relative;
  font-size: .9rem;
}
.group_list input{
  line-height: 1.6rem;
  margin-top: .5rem;
}
